{
    "Settings": {
        // =========================================================================
        // 【核心配置区域：程序运行模式】
        // =========================================================================

        // 【开关 1: API 协议类型】 必填
        // 选项: 
        // 1. "native_response": 使用 Google Gemini 原生 SDK。支持多模态和 Key 轮询。
        // 2. "openai_protocol": 使用 OpenAI 标准协议。兼容 Kimi, DeepSeek, GPT-4 以及各种中转站。
        "provider": "openai_protocol",

        // 【开关 2: 输入模式】 必填
        // 选项: 
        // 1. "upload": 直接上传 PDF 文件给 AI 解析。
        //    (推荐用于 native_response 模式，或支持文件 API 的 chat_completions 服务商，如 Kimi)
        // 2. "text": 本地使用 pdfplumber 提取纯文本后发送给 AI。
        //    (推荐用于 DeepSeek/GPT-4 等不支持文件上传，或中转 API 场景，通用性最强)
        "input_mode": "text",

        // 【网络设置】
        // 如果你需要通过代理访问 API，请在此填写。例如: "http://127.0.0.1:7895"。
        // 不需要则留空 `""`。
        "proxy_url": ""                
    },
    
    // =========================================================================
    // ⬇️ 模式一：Google Gemini 原生接口配置 (对应 provider = "native_response")
    // =========================================================================
    "Google_Native_Config": {
        // 【API 密钥池】 必填
        // 请在此填入你的 Google API Key 列表。程序会自动进行 Key 轮询，避免配额限制。
        "api_keys": [                  
            "请在此填入第一个 Google_API_KEY",
            "如果想用多个 Key 轮询，请在此填入第二个 Key",
            "可以继续添加..."
        ],
        
        // 【模型选择】 
        // 建议使用 gemini-2.0-flash 或 gemini-2.5-flash 等多模态模型。
        "model_name": "gemini-2.0-flash"
    },
    
    // =========================================================================
    // ⬇️ 模式二：OpenAI 协议接口配置 (对应 provider = "openai_protocol")
    // =========================================================================
    "OpenAI_Protocol_Config": {
        // 【API 密钥】 必填
        "api_key": "sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
        
        // 【API 基地址】 必填
        // 根据你的服务商填写。程序会自动将 API_PATH 拼接到这个地址后面。
        // 示例：OpenAI: https://api.openai.com/v1; Kimi: https://api.moonshot.cn/v1; DeepSeek: https://api.deepseek.com
        "base_url": "https://api.openai.com/v1",  
        
        // 【API 路径后缀】 必填 - 决定接口类型
        // 1. 标准模式: "/chat/completions" (程序会使用官方 SDK 的稳健方法调用)
        // 2. 自定义模式: "/responses" 或其他自定义路径 (程序会切换到底层 POST 模式调用)
        "api_path": "/chat/completions",
        
        // 【模型名称】 必填
        // 填写你服务商支持的模型名称，例如 gpt-4o, moonshot-v1-8k, deepseek-chat。
        "model_name": "gpt-4o"
    }
}